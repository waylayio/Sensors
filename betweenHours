{
  "name": "betweenHours",
  "version": "0.0.4",
  "type": "sensor",
  "script": "// For timezone names, see http://en.wikipedia.org/wiki/List_of_tz_database_time_zones\n// examples:\n// * Europe/Brussels    ->  +1 or +2\n// * Pacific/Pago_Pago  -> -11\n// * Pacific/Kiritimati -> +14\n\nvar timeZone = options.requiredProperties.timeZone;\nif(!timeZone){\n    timeZone = \"Europe/Brussels\";\n}\nvar now = moment().tz(timeZone);\nif(now.tz() === undefined){\n    send(new Error(\"Unknown timezone: \" + timeZone), null);\n}else{\n    var from = parseFloat(options.requiredProperties.from);\n    var to = parseFloat(options.requiredProperties.to);\n    if(from === undefined || to === undefined) {\n         send(new Error(\"Missing properties\"));\n    } else {\n        //using underscore library\n      to = to+1;\n      \n      var retValue = false;\n      if(to > from)\n        retValue = __.find(__.range(from, to), function(num){ return num == now.hour(); });\n      else \n        retValue = __.find(__.range(from, 24), function(num){ return num == now.hour(); }) || \n            __.find(__.range(0, to), function(num){ return num == now.hour(); })\n       \n\n      var value = {\n        observedState: retValue ? \"TRUE\" : \"FALSE\",\n        rawData: {  \n            timestamp: now.valueOf(), \n            year: now.year(), \n            month: now.month() + 1 , \n            day: now.date(), \n            hours: now.hour(), \n            minutes: now.minute(),\n            seconds: now.second(),\n            dateString : now.toString()\n        }\n      };\n      console.log(value);\n      send(null, value);\n    }\n}\n",
